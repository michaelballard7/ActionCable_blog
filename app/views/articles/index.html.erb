
<div class="container">

  <% if user_signed_in? %>
    <p><%= link_to "New Article", new_article_path, class: "btn btn-default btn-lg", id: "new-article-btn" %></p>
  <% end  %>
  
  <% if @articles.empty? %>
    <h1 id="no-articles"> No Articles Created</h1>
  <% end  %>

  <% @articles.collect do |article| %>
    <div class="well well-md">
      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.body, length: 240) %>
      </div>
      <div class="author">
         <small>Created by: <%= article.user.email %></small>
      </div>




    </div>

  <% end  %>


</div>
