
<div class="container">

  <% if user_signed_in? %>
  <% end  %>
  <p>Write your story, thoughts, or request here: <%= link_to "New Memo", new_article_path, class: "btn btn-default btn-lg", id: "new-article-btn" %></p>

  <% if @articles.empty? %>
    <h1 id="no-articles"> Be the First to Create A Memo Today?</h1>
  <% end  %>

  <% @articles.collect do |article| %>
    <div class="well well-md">
      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.body, length: 240) %>
      </div>
      <div class="author">
         <small>Created by: <%= link_to article.user.email, user_profile_path(article.user.id) %></small>
      </div>


    </div>

  <% end  %>


</div>
