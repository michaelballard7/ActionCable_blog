  <% if @user == current_user %>
    <h1>My Feed</h1>
  <% else %>
    <h1><%= @user.profile.name %>'s Feed.</h1>
  <% end %>

  <% @articles.collect do |article| %>

      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.body, length: 240) %>
      </div>
      <div class="author">
         <small>Created by: <%= link_to article.user.email, user_profile_path(article.user.id) %></small>
      </div>

      <hr>

  <% end  %>
